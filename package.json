{
  "name": "todo-api",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^8.0.29",
    "axios": "^0.22.0",
    "commander": "^8.2.0",
    "dotenv": "^10.0.0",
    "get-port": "^5.1.1",
    "jest": "^27.2.4",
    "nodemon": "^2.0.13",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5"
  },
  "dependencies": {
    "@types/get-port": "^4.2.0",
    "@types/jsonwebtoken": "^8.5.5",
    "class-validator": "^0.13.1",
    "fastify": "^3.22.0",
    "fastify-error": "^0.3.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.10",
    "ts-node": "^10.2.1",
    "typeorm": "0.2.37",
    "typescript": "4.4.3"
  },
  "scripts": {
    "cli": "ts-node -r dotenv/config ./src/cli.ts",
    "typeorm": "ts-node -r dotenv/config ./node_modules/.bin/typeorm",
    "start": "ts-node src/server.ts",
    "test": "jest",
    "dev": "nodemon -r dotenv/config src/server.ts",
    "format": "prettier --write --plugin-search-dir=. '**/*.{js,ts,tsx,json}'"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "maxWorkers": "1"
  }
}
